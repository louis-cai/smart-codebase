{
  "name": "smart-codebase",
  "version": "0.1.0",
  "description": "Task-driven cumulative learning plugin for OpenCode - AI learns from every completed task",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm && tsc --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "opencode",
    "plugin",
    "knowledge",
    "learning",
    "ai",
    "codebase",
    "memory"
  ],
  "author": "Sisyphus-Junior",
  "license": "MIT",
  "dependencies": {
    "@opencode-ai/plugin": "^1.1.19",
    "fast-glob": "^3.3.3"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "bun-types": "latest",
    "typescript": "^5.7.3"
  }
}
